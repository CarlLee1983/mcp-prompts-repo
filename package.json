{
    "name": "mcp-prompt-manager",
    "version": "1.0.0",
    "description": "Git-driven MCP Server for managing and providing Prompt templates with Handlebars support",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "preinstall": "node ./scripts/enforce-pnpm.mjs",
        "build": "tsc",
        "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
        "inspector:dev": "pnpm run build && pnpm run inspector",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "prompt",
        "template",
        "handlebars",
        "git",
        "cursor",
        "claude",
        "claude-desktop",
        "vscode",
        "visual-studio-code",
        "windsurf",
        "antigravity",
        "continue",
        "aider",
        "ide",
        "ai-assistant",
        "code-editor"
    ],
    "author": "CarlLee1983",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/CarlLee1983/mcp-prompt-manager.git"
    },
    "bugs": {
        "url": "https://github.com/CarlLee1983/mcp-prompt-manager/issues"
    },
    "homepage": "https://github.com/CarlLee1983/mcp-prompt-manager#readme",
    "packageManager": "pnpm@10.20.0",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.23.0",
        "chokidar": "^4.0.3",
        "dotenv": "^17.2.3",
        "handlebars": "^4.7.8",
        "js-yaml": "^4.1.1",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "simple-git": "^3.30.0",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@types/chokidar": "^2.1.3",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^24.10.1",
        "@types/pino-pretty": "^5.0.0",
        "@vitest/ui": "^4.0.14",
        "prettier": "^3.7.3",
        "typescript": "^5.9.3",
        "vitest": "^4.0.14"
    }
}
